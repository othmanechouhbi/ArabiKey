{
  "manifest_version": 3,
  "name": "ArabiKey",
  "version": "1.1.0",
  "description": "Type in Arabic with one click! A handy keyboard that pops up right where you need it.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icons/keyboard-16.png",
    "32": "icons/keyboard-32.png",
    "48": "icons/keyboard-48.png",
    "128": "icons/keyboard-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "keyboard.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/keyboard-16.png",
      "32": "icons/keyboard-32.png",
      "48": "icons/keyboard-48.png",
      "128": "icons/keyboard-128.png"
    }
  }
}